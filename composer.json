{
    "name": "boevsson/commission-calculator-task",
    "description": "Skeleton recruitment task",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Boevsson\\CommissionTask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Boevsson\\CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpunit/phpunit": "^9.5.11"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
